<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.repository.mapper.PlotMapper">
	<resultMap type="plot" id="replot">
		<result column="movie_seq" property="movieSeq"/>
		<result column="movie_plot" property="movieplot"/>
	</resultMap>

	<insert id="insertPlot" parameterType="plot">
		insert into tb_movie_plot (
			movie_seq, movie_plot
		) values (
			${movieSeq}, ${moviePlot}
		)
	</insert>

	<select id="selectPlot" parameterType="int" resultMap="replot">
		select *
		  from tb_movie_plot
		 where movie_seq = ${movieSeq}
	</select>
</mapper>